<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item
                android:drawable="@drawable/languageshape"
                android:width="50dp"
                android:height="50dp"/>

            <item
                android:drawable="@drawable/lang_scala_icon"
                android:width="30dp"
                android:left="10dp"
                android:top="10dp"
                android:height="30dp" />
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item
                android:drawable="@drawable/scalatag_selected_background"
                android:width="50dp"
                android:height="50dp"/>

            <item
                android:drawable="@drawable/lang_scala_icon"
                android:width="30dp"
                android:left="10dp"
                android:top="10dp"
                android:height="30dp" />
        </layer-list>
    </item>
</selector>
