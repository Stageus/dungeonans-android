<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/communityPageScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hashtagHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:scrollbars="none"
            android:background="@color/lightGrey"
            app:layout_constraintTop_toBottomOf="@+id/mainActivityPostingLayout">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/tagbar_tag_icon"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                </RadioGroup>
            </LinearLayout>


        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:indeterminate="true"/>
            <LinearLayout
                android:id="@id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="실시간 인기글"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:gravity="center"
                            android:clipToPadding="false"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="9.5"
                                android:layout_height="60dp"
                                android:layout_marginTop="5dp"
                                android:elevation="3dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="10dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/hotpost_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/hotpost_1_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginBottom="30dp"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <Button
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_1_title"
                                        app:layout_constraintStart_toEndOf="@+id/hotpost_1_title"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_1_title" />

                                    <TextView
                                        android:id="@+id/hotpost_1_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        app:layout_constraintStart_toStartOf="@+id/hotpost_1_title"
                                        app:layout_constraintTop_toBottomOf="@+id/hotpost_1_title" />

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginRight="90dp"
                                        android:layout_marginLeft="180dp"
                                        android:background="@drawable/thumbs_up"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>

                                    <TextView

                                        android:id="@+id/hotpost_1_likecount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/DarkBlue"
                                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                                        app:layout_constraintTop_toTopOf="@+id/imageView2" />

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"
                                        android:background="@drawable/comment_icon"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_1_likecount"
                                        app:layout_constraintStart_toEndOf="@+id/hotpost_1_likecount"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_1_likecount" />

                                    <TextView
                                        android:id="@+id/hotpost_1_commentcount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/gray"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_1_likecount"
                                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_1_likecount" />


                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:gravity="center"
                            android:clipToPadding="false"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="9.5"
                                android:layout_height="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:elevation="3dp"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="25dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/hotpost_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/hotpost_2_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginBottom="30dp"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <Button
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_2_title"
                                        app:layout_constraintStart_toEndOf="@+id/hotpost_2_title"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_2_title" />

                                    <TextView
                                        android:id="@+id/hotpost_2_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        app:layout_constraintStart_toStartOf="@+id/hotpost_2_title"
                                        app:layout_constraintTop_toBottomOf="@+id/hotpost_2_title" />

                                    <ImageView
                                        android:id="@+id/imageVi124124124ew2"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="180dp"
                                        android:layout_marginRight="90dp"
                                        android:background="@drawable/thumbs_up"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/hotpost_2_likecount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/DarkBlue"
                                        app:layout_constraintBottom_toBottomOf="@+id/imageVi124124124ew2"
                                        app:layout_constraintStart_toEndOf="@+id/imageVi124124124ew2"
                                        app:layout_constraintTop_toTopOf="@+id/imageVi124124124ew2" />

                                    <ImageView
                                        android:id="@+id/imagedasfasfdfView5"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"
                                        android:background="@drawable/comment_icon"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_2_likecount"
                                        app:layout_constraintStart_toEndOf="@+id/hotpost_2_likecount"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_2_likecount" />

                                    <TextView
                                        android:id="@+id/hotpost_2_commentcount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/gray"
                                        app:layout_constraintBottom_toBottomOf="@+id/hotpost_2_likecount"
                                        app:layout_constraintStart_toEndOf="@+id/imagedasfasfdfView5"
                                        app:layout_constraintTop_toTopOf="@+id/hotpost_2_likecount" />


                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/lightGrey"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/recyclerViewParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="글 전체보기"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/communityPageRecyclerView"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>