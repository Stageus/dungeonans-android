<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zxcvzxcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_constraint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/close_icon"
                android:scaleType="fitCenter"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.1"/>

            <TextView
                android:id="@+id/page_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글쓰기"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                />

            <ImageButton
                android:id="@+id/temp_store_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_temp_store"
                android:textColor="@color/white"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/store_btn"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageButton
                android:id="@+id/store_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:src="@drawable/btn_store"
                android:scaleType="fitCenter"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/whatlanguage"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/titleandweb"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_constraint">


            <HorizontalScrollView
                android:id="@+id/hashtagHorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/pythontag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/kotlintag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/androidtag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/htmltag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/csstag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/jstag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/javatag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/cpptag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/sqltag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rtag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/phptag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/swifttag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/csharptag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gotag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/scalatag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/darttag"
                        android:button="@null" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/bashtag"
                        android:button="@null"
                        android:elevation="20dp" />

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/djangotag"
                        android:button="@null"
                        android:elevation="20dp" />
                </RadioGroup>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>




