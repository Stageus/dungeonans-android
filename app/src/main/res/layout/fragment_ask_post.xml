        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleandweb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/whatlanguage">

            <ScrollView
                android:id="@+id/postEditScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <LinearLayout
                    android:id="@+id/body_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/title_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="제목"
                        android:textSize="25sp"></EditText>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp" />
                    </LinearLayout>

                    <com.mypackage.common.custom.android.widgets.CustomWebview
                        android:id="@+id/body_webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.mypackage.common.custom.android.widgets.CustomWebview>


                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/hiddenlinear"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:visibility="invisible"
            android:background="#E8E8E8"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/lanbutton_h1"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/h1_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_fontweight"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fontweight_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_bold"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bold_cion"/>

            <ImageButton
                android:id="@+id/lanbutton_nott"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/nott_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_u"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/u_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_sentence"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sentence_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_senorder"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sentence_order_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_A"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/a_icon"/>

            <ImageButton
                android:id="@+id/lanbutton_hyper"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/hiperlink_icon"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"

            android:layout_height="41dp"
            android:background="#F2F2F2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/mybutton_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/insertimage_icon"></ImageButton>

            <ImageButton
                android:id="@+id/mybutton_chart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/chart_icon"></ImageButton>

            <ImageButton
                android:id="@+id/mybutton_lan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/aboutlan_icon"></ImageButton>

            <ImageButton
                android:id="@+id/mybutton_code"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/codeblock_icon"></ImageButton>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>